@{
    ViewData["Title"] = "Skills Page";
}


<div class="container mt-5">
    <h1 class="text-center mb-5 skills-title">Skills and technologies</h1>

    <div class="row g-4">

        <!-- Frontend -->
        <div class="col-md-6 col-lg-4">
            <div class="skill-card">
                <h4 class="skill-category">Frontend</h4>
                <ul class="skill-list">
                    <li>HTML</li>
                    <li>CSS</li>
                    <li>JavaScript</li>
                    <li>React</li>
                </ul>
            </div>
        </div>

        <!-- Backend -->
        <div class="col-md-6 col-lg-4">
            <div class="skill-card">
                <h4 class="skill-category">Backend</h4>
                <ul class="skill-list">
                    <li>Python</li>
                    <li>C++</li>
                    <li>C#</li>
                    <li>ASP.NET</li>
                </ul>
            </div>
        </div>

        <!-- Programming Concepts -->
        <div class="col-md-6 col-lg-4">
            <div class="skill-card">
                <h4 class="skill-category">Programming Concepts</h4>
                <ul class="skill-list">
                    <li>Object-Oriented Programming (OOP)</li>
                    <li>System Programming</li>
                    <li>Network Programming</li>
                    <li>ORM (Object-Relational Mapping)</li>
                </ul>
            </div>
        </div>

    </div>
</div>